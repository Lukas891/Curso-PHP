Algoritmo "Parametros"

Var
   N : inteiro
procedimento  parouimpar(V: inteiro)
inicio
   se (V%2 = 0)entao
      escreval("O numero", V," e PAR")
   senao
      escreval("O numero", V," e IMPAR")
   fimse
fimprocedimento
Inicio
   escreval("Recebi um numero: ")
   leia (N)
   Parouimpar(N)
   escreval("O valor de V e ", V)
   escreval("O valor de V e ", N)
Fimalgoritmo